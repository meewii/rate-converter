<resources>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="titleTextColor">?attr/colorOnPrimary</item>
    <item name="android:elevation">0dp</item>
  </style>

  <style name="AppTheme.TextInputLayout.Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxBackgroundColor">@color/white_a12</item>
    <item name="boxStrokeWidth">1dp</item>
  </style>

  <style name="AppTheme.TextInputLayout.EditText">
    <item name="android:inputType">numberDecimal</item>
    <item name="android:maxWidth">100dp</item>
    <item name="android:maxLength">10</item>
    <item name="android:gravity">end</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:textAppearance">@style/AppTheme.TextAppearance.RateValue</item>
  </style>

  <style name="AppTheme.SnackBar" parent="Widget.MaterialComponents.Snackbar">
    <item name="android:background">?attr/colorError</item>
  </style>

</resources>
